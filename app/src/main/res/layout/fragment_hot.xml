<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_hot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/comm_color_black"
        app:tabSelectedTextColor="@color/comm_color_black"
        app:tabTextColor="@color/comm_color_second" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_hot_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_dp_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_hot" />
</android.support.constraint.ConstraintLayout>