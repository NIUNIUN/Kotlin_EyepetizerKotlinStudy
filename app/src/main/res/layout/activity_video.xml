<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_color_second">

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/sgsy_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_dp_250"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="video_tranision_name"
        />

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_10"
        android:layout_marginRight="@dimen/comm_dp_10"
        android:textColor="@color/comm_color_white"
        android:textSize="@dimen/comm_sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgsy_video"
        tools:text="这支酷炫科幻动画，真的不是皮克斯出品？" />

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:layout_marginRight="@dimen/comm_dp_10"
        android:textColor="@color/comm_color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_title"
        tools:text="广告 / 04’34’’" />

    <TextView
        android:id="@+id/tv_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:layout_marginRight="@dimen/comm_dp_10"
        android:textColor="@color/comm_color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_time"
        tools:text="详细介绍" />

    <TextView
        android:id="@+id/tv_video_favorites"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/comm_dp_60"
        android:layout_height="@dimen/comm_dp_30"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:drawableLeft="@mipmap/ic_action_favorites"
        android:drawablePadding="@dimen/comm_sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/comm_color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_description"
        tools:text="收藏" />

    <TextView
        android:id="@+id/tv_video_share"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/comm_dp_60"
        android:layout_height="@dimen/comm_dp_30"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:drawableLeft="@mipmap/ic_action_share"
        android:drawablePadding="@dimen/comm_sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/comm_color_white"
        app:layout_constraintLeft_toRightOf="@id/tv_video_favorites"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_description"
        tools:text="分享" />

    <TextView
        android:id="@+id/tv_video_reply"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/comm_dp_60"
        android:layout_height="@dimen/comm_dp_30"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:drawableLeft="@mipmap/ic_action_reply"
        android:drawablePadding="@dimen/comm_sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/comm_color_white"
        app:layout_constraintLeft_toRightOf="@id/tv_video_share"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_description"
        tools:text="评论" />

    <TextView
        android:id="@+id/tv_video_download"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/comm_dp_60"
        android:layout_height="@dimen/comm_dp_30"
        android:layout_marginLeft="@dimen/comm_dp_10"
        android:layout_marginTop="@dimen/comm_dp_5"
        android:drawableLeft="@mipmap/ic_action_download"
        android:drawablePadding="@dimen/comm_sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/comm_color_white"
        app:layout_constraintLeft_toRightOf="@id/tv_video_reply"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_description"
        tools:text="缓存" />

</android.support.constraint.ConstraintLayout>